<script>
    // Function to open the modal and populate the form with the slide data
    function editSlide(slideId, imageUrl, title, description) {
        document.getElementById('slide_id').value = slideId;
        document.getElementById('image_url').value = imageUrl;
        document.getElementById('title').value = title;
        document.getElementById('description').value = description;
        document.getElementById('slide_position').value = slideId;
        $('#editSlideshowModal').modal('show');
    }
</script>

