<%- include('partials/header', { title: 'Shopping Cart', cssFile: 'cart.css' }) %>

<% if (!user) { %>
    <div class="container mx-auto mt-4">
        <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4" role="alert">
            <p class="font-bold">Not Logged In</p>
            <p>You need to <a href="/login" class="underline text-blue-500">log in</a> to access your shopping cart.</p>
        </div>
    </div>
<% } else { %>
    <% if (user && user.role === 'admin') { %>
        <%- include('partials/admin_sidebar') %>
    <% } %>

    <div class="container mx-auto mt-4">
        <!-- Cart Section -->
        <div class="mt-5">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-4">
                <div class="md:col-span-2" id="cart-items">
                    <!-- Cart items will be inserted here by JavaScript -->
                </div>
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <h4 class="text-lg font-bold mb-4">Estimate Shipping & Tax</h4>
                    <form>
                        <div class="mb-4">
                            <label for="country" class="block text-sm font-medium text-gray-700">Country</label>
                            <select id="country" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
                                <option>United States</option>
                                <!-- Add more countries as needed -->
                            </select>
                        </div>
                        <div class="mb-4">
                            <label for="zip" class="block text-sm font-medium text-gray-700">Zip Code</label>
                            <input type="text" id="zip" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" placeholder="Enter Zip Code">
                        </div>
                    </form>
                    <hr class="my-4">
                    <div class="flex justify-between mb-2">
                        <p class="text-sm">Subtotal:</p>
                        <p id="subtotal" class="text-sm">$0.00</p>
                    </div>
                    <div class="flex justify-between mb-2">
                        <p class="text-sm">Shipping:</p>
                        <p class="text-sm">Calculate Above</p>
                    </div>
                    <div class="flex justify-between mb-2">
                        <p class="text-sm">Sales Tax:</p>
                        <p class="text-sm">Calculate Above</p>
                    </div>
                    <hr class="my-4">
                    <div class="flex justify-between mb-4">
                        <h5 class="font-bold">Total:</h5>
                        <h5 id="total" class="font-bold">$0.00</h5>
                    </div>
                    <!-- Update the button -->
                    <button id="checkout-btn" class="w-full bg-blue-500 text-white px-4 py-2 rounded-md cursor-not-allowed opacity-50" disabled onclick="proceedToCheckout()">Proceed to Checkout</button>
                </div>
            </div>
        </div>
    </div>

<%- include('partials/footer') %>

<script>
    const currentUserId = "<%= user.id %>";

    // Fetch cart and user data from localStorage
    let storedCartData = JSON.parse(localStorage.getItem('cartData')) || {};
    let cart = storedCartData.cart || {};
    let storedUserId = storedCartData.userId;

    // Check if cart belongs to the current user
    if (storedUserId !== currentUserId) {
        cart = {};
        localStorage.setItem('cartData', JSON.stringify({ userId: currentUserId, cart }));
    }

    // Function to update the cart display
    function updateCartDisplay() {
        const cartItemsContainer = document.getElementById('cart-items');
        const checkoutButton = document.getElementById('checkout-btn');
        cartItemsContainer.innerHTML = ''; // Clear any previous cart items

        // If cart is empty, show empty cart message and disable the checkout button
        if (Object.keys(cart).length === 0) {
            cartItemsContainer.innerHTML = `
                <div class="bg-white shadow-lg rounded-lg p-6 text-center">
                    <h5 class="text-lg font-bold mb-3">Your cart is empty!</h5>
                    <p class="text-gray-500">Start shopping now to fill it with products you love.</p>
                    <a href="/products" class="inline-block mt-4 bg-blue-500 text-white px-4 py-2 rounded-md">Shop Now</a>
                </div>
            `;
            document.getElementById('subtotal').innerText = '$0.00';
            document.getElementById('total').innerText = '$0.00';
            // Disable the checkout button
            checkoutButton.disabled = true;
            checkoutButton.classList.add('cursor-not-allowed', 'opacity-50');
            return;
        }

        let subtotal = 0;

        // Loop through the cart and create HTML for each item
        for (const [id, product] of Object.entries(cart)) {
            const itemTotal = product.price * product.quantity;
            subtotal += itemTotal;

            const cartItemRow = `
                <div class="cart-item bg-white rounded-lg p-6 mb-6 shadow-sm">
                    <div class="flex items-center space-x-6">
                        <div class="w-24">
                            <img src="https://via.placeholder.com/150" class="w-full h-auto rounded-lg" alt="${product.name}">
                        </div>
                        <div class="flex-1">
                            <h5 class="text-lg font-bold text-gray-800">${product.name}</h5>
                            <div class="flex justify-between items-center mt-4">
                                <div class="flex items-center space-x-2 bg-gray-100 p-2 rounded-md">
                                    <button class="px-3 py-1 bg-white rounded-md" onclick="updateQuantity('${id}', -1)">-</button>
                                    <span class="mx-4 text-gray-700 font-semibold">${product.quantity}</span>
                                    <button class="px-3 py-1 bg-white rounded-md" onclick="updateQuantity('${id}', 1)">+</button>
                                </div>
                                <p class="text-sm text-gray-600 font-semibold">$${product.price.toFixed(2)}</p>
                                <p class="text-sm text-gray-600 font-semibold">$${itemTotal.toFixed(2)}</p>
                                <button class="text-red-500 text-sm font-semibold" onclick="removeItem('${id}')">Remove</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            cartItemsContainer.insertAdjacentHTML('beforeend', cartItemRow);
        }

        // Update subtotal and total display
        document.getElementById('subtotal').innerText = `$${subtotal.toFixed(2)}`;
        document.getElementById('total').innerText = `$${subtotal.toFixed(2)}`;

        // Enable the checkout button since there are items in the cart
        checkoutButton.disabled = false;
        checkoutButton.classList.remove('cursor-not-allowed', 'opacity-50');

        // Update the cart in localStorage
        localStorage.setItem('cartData', JSON.stringify({ userId: currentUserId, cart }));
    }

    function updateQuantity(id, change) {
        if (cart[id].quantity + change > 0) {
            cart[id].quantity += change;
        } else {
            delete cart[id];
        }
        localStorage.setItem('cartData', JSON.stringify({ userId: currentUserId, cart }));
        updateCartDisplay();
    }

    function removeItem(id) {
        delete cart[id];
        localStorage.setItem('cartData', JSON.stringify({ userId: currentUserId, cart }));
        updateCartDisplay();
    }

    function proceedToCheckout() {
        // Ensure that the cart has items before proceeding
        if (Object.keys(cart).length > 0) {
            window.location.href = '/checkout'; // Redirect to the checkout page
        }
    }

    document.addEventListener('DOMContentLoaded', updateCartDisplay);
</script>

<%- include('partials/footer') %>
